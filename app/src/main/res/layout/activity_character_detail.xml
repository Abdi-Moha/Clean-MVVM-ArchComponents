<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/character_details_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/margin_default"
                tools:context=".features.character_details.CharacterDetailActivity">

                <include
                    android:id="@+id/info_layout"
                    layout="@layout/layout_character_detail_info" />

                <include
                    android:id="@+id/planet_layout"
                    layout="@layout/layout_character_detail_planet" />

                <include
                    android:id="@+id/films_layout"
                    layout="@layout/layout_character_detail_films" />

                <include
                    android:id="@+id/specie_layout"
                    layout="@layout/layout_character_detail_specie" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

    </ScrollView>
</layout>